<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <queries>
        <package android:name="woyou.aidlservice.jiuiv5" />
    </queries>
    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyPos"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_p"
        tools:replace="android:label"
        android:requestLegacyExternalStorage="true"
        android:allowNativeHeapPointerTagging="false">



        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <!--屏幕适配 设计稿尺寸-->
        <meta-data
            android:name="design_width_in_dp"
            android:value="960" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="600" />

        <!-- Arms 配置 -->
        <meta-data
            android:name="com.freemud.app.easypos.common.GlobalConfiguration"
            android:value="ConfigModule" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".mvp.ui.CommonWebAct" android:screenOrientation="landscape"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!--        <activity android:name=".mvp.ui.CommonWebAct" android:screenOrientation="landscape"/>-->
        <activity android:name=".mvp.ui.capture.CustomScanAct" android:screenOrientation="landscape" />
    </application>
</manifest>