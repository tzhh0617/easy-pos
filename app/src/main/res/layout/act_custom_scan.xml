    <include layout="@layout/common_head"
        android:id="@+id/custom_scan_head"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/custom_scan_box_content"
        app:layout_constraintTop_toBottomOf="@id/custom_scan_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <SurfaceView
            android:id="@+id/custom_scan_surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.king.zxing.ViewfinderView
            android:id="@+id/custom_scan_viewfinderView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/custom_scan_ivTorch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/zxl_torch_selector"
            android:layout_marginTop="@dimen/torchMarginTop" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="将二维码放入框内，自动扫描"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_l4"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_180"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>