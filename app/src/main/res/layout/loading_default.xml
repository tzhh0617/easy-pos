<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/border_loading_default"
    android:gravity="center_horizontal"
    android:id="@+id/view_loading_default_ll">

    <ImageView
        android:id="@+id/view_loading_default_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/view_loading_default_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_loading_default_iv"
        android:text="11"
        android:visibility="gone"
        android:textColor="@android:color/black" />

</RelativeLayout>